<div class="logo-placeholder">{{ dynamicData.logoText }}</div>
  <div class="container">
    <h2>Login</h2>
    <form method="post" action="/login"> <!-- Specify your login route -->
      <div class="input-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="input-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>
      <div class="button-group">
        <a href="/signup" class="signup-button">Sign Up</a>
        <span class="or">or</span>
        <button class="signup-button login-button" type="submit">Login</button>
      </div>
    </form>
  </div>
  




